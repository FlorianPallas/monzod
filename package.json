{
  "name": "monzod",
  "description": "Strongly typed MongoDB using Zod",
  "version": "0.1.2",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "zod",
    "mongodb",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/FlorianPallas/monzod.git"
  },
  "author": {
    "name": "Florian Pallas",
    "email": "mail@fpallas.com",
    "url": "https://fpallas.com"
  },
  "bugs": {
    "url": "https://github.com/FlorianPallas/monzod/issues"
  },
  "homepage": "https://github.com/FlorianPallas/monzod",
  "scripts": {
    "lint": "tsc",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "release": "pnpm build && changeset publish",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest run --ui --coverage"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@tsconfig/recommended": "^1.0.2",
    "@vitest/coverage-v8": "^0.34.1",
    "@vitest/ui": "^0.34.1",
    "prettier": "^3.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  },
  "peerDependencies": {
    "mongodb": "^5.7.0",
    "zod": "^3.21.4"
  },
  "packageManager": "pnpm@8.6.11"
}